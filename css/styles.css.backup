/* LinuxDroid Website Styles */
:root {
  --primary-color: #00f5ff;
  --secondary-color: #1a1b26;
  --accent-color: #7f9cb5;
  --text-color: #e5e5e5;
  --text-muted: #888;
  --bg-primary: #0a0b14;
  --bg-secondary: #12141d;
  --bg-card: #1c1e2a;
  --success-color: #00f5ff;
  --warning-color: #7f9cb5;
  --danger-color: #ff3860;
  --border-color: #2a2d3d;
  --border-radius: 12px;
  --box-shadow: 0 4px 15px rgba(0, 245, 255, 0.1);
  --box-shadow-hover: 0 8px 25px rgba(0, 245, 255, 0.2);
  --transition-speed: 0.3s;
  --code-bg: #1d1f2b;
  --selection-bg: #2a3a63;
  --neon-glow: 0 0 10px rgba(0, 245, 255, 0.5);
  --btn-primary-bg: #00f5ff;
  --btn-primary-text: #0a0b14;
  --btn-secondary-bg: #7f9cb5;
  --btn-secondary-text: #0a0b14;
  --nav-height: 70px;
  --glass-bg: rgba(28, 30, 42, 0.25);
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

/* Base Styles */
body {
  font-family: 'Poppins', 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  margin: 0;
  padding: 0;
  background: var(--bg-primary);
  color: var(--text-color);
}

/* Glassmorphism Effect */
.glassmorphism {
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid var(--glass-border);
  box-shadow: var(--glass-shadow);
  transition: all var(--transition-speed) ease;
}

/* Dual-tone gradient base class */
.dual-tone-gradient {
  background: linear-gradient(135deg, var(--bg-secondary), var(--bg-primary));
  position: relative;
  overflow: hidden;
}

.dual-tone-gradient::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(0, 245, 255, 0.1) 0%, transparent 30%),
    radial-gradient(circle at 80% 70%, rgba(255, 0, 255, 0.1) 0%, transparent 30%);
  pointer-events: none;
}

::selection {
  background: var(--selection-bg);
  color: var(--text-color);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  color: var(--text-color);
  margin: 20px 0;
  line-height: 1.2;
}

h1 {
  font-size: 3em;
  text-shadow: 0 0 10px rgba(0, 245, 255, 0.5);
  color: var(--text-color);
}

h2 {
  font-size: 2.5em;
  color: var(--primary-color);
  text-shadow: var(--neon-glow);
}

h3 {
  font-size: 2em;
  color: var(--text-color);
}

h4 {
  font-size: 1.5em;
  color: var(--text-color);
}

p {
  margin: 15px 0;
  line-height: 1.7;
}

a {
  color: var(--primary-color);
  text-decoration: none;
  transition: color var(--transition-speed) ease;
}

a:hover {
  color: var(--accent-color);
}

/* Header */
header {
    background-color: rgba(26, 27, 38, 0.5);
    color: white;
    padding: 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--glass-shadow);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--glass-border);
    height: var(--nav-height);
    transition: all 0.3s ease;
}

.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    padding: 0 20px;
    background: linear-gradient(90deg, 
        rgba(0, 245, 255, 0.05) 0%,
        rgba(127, 156, 181, 0.05) 50%,
        rgba(0, 245, 255, 0.05) 100%
    );
}

.logo {
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.1);
    padding: 8px 15px;
    border-radius: var(--border-radius);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    box-shadow: var(--glass-shadow);
}

.logo:hover {
    background: rgba(0, 245, 255, 0.08);
    transform: translateY(-2px);
}

.logo-image {
    width: 40px;
    height: 40px;
    margin-right: 10px;
    max-width: 40px;
    object-fit: contain;
    transition: transform 0.3s ease;
    filter: drop-shadow(0 0 5px rgba(0, 245, 255, 0.3));
}

.logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    letter-spacing: 0.5px;
    background: linear-gradient(90deg, var(--primary-color), #fff);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-shadow: 0 0 15px rgba(0, 245, 255, 0.3);
}

/* Navigation */
nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
    gap: 2px;
}

nav li {
    margin: 0;
    position: relative;
}

nav a {
    color: var(--text-color);
    font-weight: 500;
    padding: 8px 12px;
    border-radius: 6px;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    align-items: center;
    letter-spacing: 0.3px;
    font-size: 0.95rem;
}

nav a::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 6px;
    background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
}

nav a:hover::before,
nav a.active::before {
    opacity: 0.1;
}

nav a:hover, nav a.active {
    color: var(--primary-color);
    background: rgba(0, 245, 255, 0.1);
    border: 1px solid rgba(0, 245, 255, 0.2);
    transform: translateY(-1px);
}

nav a i {
